@model GetViewModel



@using(Html.BeginForm("Index","Home",FormMethod.Post,new {@class="form"}))
{
<div class="div1">

	@Html.DropDownListFor(s => s.SeletedId, Model.Products, "Lütfen seçiniz..", new {@class="drop"})
	@Html.HiddenFor(s=>s.SeletedId)

</div>
<div class="div2">
	@if (Model.Detail != null)
	{
		@foreach (var item in Model.Detail)
		{
			
			<p style="width:50%;float:left;">@item.Name :</p>
			<p style="width:50%;float:left;">@item.Value</p>
		}

	}
</div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>

	$(document).ready(function () {


		$(".drop").change(function () {
			$(".div2").slideUp("slow");


			sleep(2000).then(() => { debugger; $(".div2").slideDown("slow"); });
			

			sleep(2000).then(() => { $(".form").submit(); });

			
		
		});

		

	});

</script>